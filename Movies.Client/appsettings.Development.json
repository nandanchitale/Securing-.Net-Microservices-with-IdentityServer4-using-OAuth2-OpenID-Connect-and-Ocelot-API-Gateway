{
  "Logging": {
    "LogLevel": { // All providers, LogLevel applies to all the enabled providers.
      "Default": "Information", // Default logging, Error and higher.
      "Microsoft": "Trace" // All Microsoft* categories, Warning and higher.
    },
    "Debug": { // Debug provider.
      "LogLevel": {
        "Default": "Information", // Overrides preceding LogLevel:Default setting.
        "Microsoft.Hosting": "Trace" // Debug:Microsoft.Hosting category.
      }
    },
    "EventSource": { // EventSource provider
      "LogLevel": {
        "Default": "Information" // All categories of EventSource provider.
      }
    }
  },
  "AllowedHosts": "*",
  "IdentityServerURL": "http://localhost:5041"
}